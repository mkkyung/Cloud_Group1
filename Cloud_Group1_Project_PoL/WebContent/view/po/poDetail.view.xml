			<m:Button type="Reject" text="발주서 수정" id="button"
				visible="{edit>/Edit}" press="edit" />
			<!-- press=".onShow" /> -->
			<m:Button id="enter" icon="sap-icon://save" type="Emphasized"
				visible="{enter>/Enter}" press="enter" />
			<m:Button type="Accept" id="cancel" text="취소" press="cancel" />
		</m:headerContent>

		<m:content>
			<l:Grid defaultSpan="L4 M6 S6" class="white">
				<l:VerticalLayout class="sapUiTinyMarginEnd">
					<f:SimpleForm title="발주번호: PO0000001"
						layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3"
						labelSpanM="12" labelSpanS="12" adjustLabelSpan="false"
						emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
						columnsXL="2" columnsL="2" columnsM="1"
						singleContainerFullSize="false" editable="false">
						<m:Text text="발주상태: 승인" class="sapUiTinyMarginBottom" />
						<m:Text text="발주일자: 2019-11-08" class="sapUiTinyMarginBottom" />
						<m:Text text="입고예정일: 2019-11-22" class="sapUiTinyMarginBottom" />
					</f:SimpleForm>
				</l:VerticalLayout>
				<l:VerticalLayout class="sapUiTinyMarginEnd">
					<f:SimpleForm title="공급업체"
						layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3"
						labelSpanM="12" labelSpanS="12" adjustLabelSpan="false"
						emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
						columnsXL="2" columnsL="2" columnsM="1"
						singleContainerFullSize="false">
						<!-- <Title level="H2" titleStyle="H2" text="공급업체" -->
						<!-- class="sapUiMediumMarginBottom" /> -->
						<f:content>
							<m:Text text="공급업체명 : 황금전자" class="sapUiTinyMarginBottom" />
							<m:Text text="공급업체코드: VE01" class="sapUiTinyMarginBottom" />
							<m:Text text="사업자등록번호: 4567107-22-684989123" class="sapUiTinyMarginBottom" />
							<m:Text text="공급업체 주소: 서울특별시 성동구 청계천로10길 7 미림빌딩 2층" class="sapUiTinyMarginBottom" />
							<m:Text text="대표자: 이다인" class="sapUiTinyMarginBottom" />
						</f:content>
					</f:SimpleForm>
				</l:VerticalLayout>
				<l:VerticalLayout class="sapUiTinyMarginEnd">
					<f:SimpleForm layout="ResponsiveGridLayout"
						labelSpanXL="4" labelSpanL="3" labelSpanM="12" labelSpanS="12"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0"
						emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2"
						columnsM="1" singleContainerFullSize="false">
						<m:Title class="sapUiMediumMarginBottom" />
						<m:Text text="업태: 도소매" class="sapUiTinyMarginBottom" />
						<m:Text text="종목: 사무기기 판매, 유통" class="sapUiTinyMarginBottom" />
						<m:Text text="이메일: GOLDPRINT@NAVER.COM" class="sapUiTinyMarginBottom" />
					</f:SimpleForm>
				</l:VerticalLayout>
			</l:Grid>
			<m:VBox class="sapUiSmallMargin">
				<f:SimpleForm title="상품 리스트"
					layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3"
					labelSpanM="12" labelSpanS="12" adjustLabelSpan="false"
					emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					columnsXL="2" columnsL="2" columnsM="1"
					singleContainerFullSize="false">
				</f:SimpleForm>

				<Table id="esttable" 
				         selectionMode="None" 
				         visibleRowCount="7"
					     setEnableGrouping="true" 
					     ariaLabelledBy="title" 
					     rows="{GETPOSet>/GETPOSet}">

					<columns>
						<Column width="11rem">
							<m:Label text="상품명" />
							<template>
								<m:Text text="{GETPOSet>PoPname}" />
							</template>
						</Column>

						<Column>
							<m:Label text="상품코드" />
							<template>
								<m:Text text="{GETPOSet>PoCat3}" />
							</template>
						</Column>
						<Column>
							<m:Label text="발주수량" />
							<template>
								<m:Input value="{GETPOSet>PoAmt}" editable="{enter>/Enter}"  valueState="{color>/Color}" />
							</template>
						</Column>
						<Column>
							<m:Label text="총 수량" />
							<template>
								<m:Text text="{GETPOSet>PoTotal}" />
							</template>
						</Column>

						<Column>
							<m:Label text="단가" />
							<template>
								<m:Text text="{GETPOSet>PoEprice}" />
							</template>
						</Column>

						<Column>
							<m:Label text="합계" />
							<template>
								<m:Text text="{GETPOSet>PoTprice}" />
							</template>
						</Column>
					</columns>
				</Table>














