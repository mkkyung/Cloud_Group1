<mvc:View
	controllerName="Cloud_Group1_ProjectCloud_Group1_Project.controller.products.List"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" height="100%" xmlns="sap.m" xmlns:f="sap.f"
	xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:l="sap.ui.layout">
	<App id="apps">
		<Page title="Manage Products" class="sapUiContentPadding"
			showNavButton="true">
			<headerContent>
				<Button icon="sap-icon://add" press="handleCreatePress" />
				<Button icon="sap-icon://excel-attachment" />
			</headerContent>
			<fb:FilterBar reset="onReset" search="onSearch"
				showRestoreButton="true" showClearButton="true" useToolbar="false">
				<fb:filterItems>
					<fb:FilterItem name="Cat1" label="대분류"
						mandatory="true">
						<fb:control>
							<ComboBox>
								<items>
									<core:Item key="001" text="EMEA" />
								</items>
							</ComboBox>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem name="Cat2" label="중분류">
						<fb:control>
							<ComboBox>
								<items>
									<core:Item key="001" text="America" />
								</items>
							</ComboBox>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem name="Cat3" label="상품명">
						<fb:control>
							<ComboBox>
								<items>
									<core:Item key="001" text="America" />
								</items>
							</ComboBox>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem name="Made" label="제조사">
						<fb:control>
							<Input />
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem name="Date1" label="출시일(From)">
						<fb:control>
							<DatePicker />
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem name="Date2" label="출시일(To)">
						<fb:control>
							<DatePicker />
						</fb:control>
					</fb:FilterItem>
				</fb:filterItems>
			</fb:FilterBar>
			<content>
				<Table id="productsTable" inset="false"
					class="sapFDynamicPageAlignContent"  items="{MainData>/MainData}">
					<columns>
						<Column width="10em">
							<Text text="대분류" />
						</Column>
						<Column width="10em">
							<Text text="중분류" />
						</Column>
						<Column width="15em">
							<Text text="상품코드" />
						</Column>
						<Column width="30em">
							<Text text="상품명" />
						</Column>
						<Column width="10em">
							<Text text="표준금액" />
						</Column>
						<Column width="20em">
							<Text text="제조사" />
						</Column>
						<Column width="20em">
							<Text text="출시일" />
						</Column>
					</columns>
					<items>						
						<ColumnListItem type="Navigation"
							press="handleMasterPress">
							<cells>
								<Text text="{MainData>Cat1No}" />
								<Text text="{MainData>Cat2No}" />
								<Text text="{MainData>Cat3No}" />
								<Text text="{MainData>Cat3Name}" />
								<ObjectNumber
										number="{
												parts:[{path: 'MainData>Cat3Price'},{path:'MainData>Cat3Cuky'}],
												type: 'sap.ui.model.type.Currency',
												formatOptions: {showMeasure: false}
												}"/>
								<Text text="{MainData>Cat3Made}" />
								<Text text="{MainData>Cat3Date}" />
							</cells>
						</ColumnListItem>				
					</items>
				</Table>
			</content>

		</Page>
	</App>
</mvc:View>