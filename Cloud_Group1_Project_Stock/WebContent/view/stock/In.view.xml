<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
	controllerName="Cloud_Group1_ProjectCloud_Group1_Project.controller.stock.In"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:vm="sap.ui.comp.variants">
	<App id="apps">
		<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="false">
					<f:content>
						<fb:FilterBar search="onSearch" useToolbar="false" showGoOnFB="false">
							<fb:filterItems>
								<fb:FilterItem name="A" label="공급업체명">
									<fb:control>
										<Select
											id="slName"
											forceSelection="true"
											change="onSelectChange"
											items="{view>/data}">
										<core:Item  text="{view>Zcolu}"/> <!-- key="{view>Zcolu}" -->
										</Select>
									</fb:control>				
								</fb:FilterItem>								
								<fb:FilterItem name="B" label="제품명">
									<fb:control>
										<Select
											id="slCategory"
											change="onSelectChange"
											forceSelection="true"
											items="{view>/data}">
										<core:Item  text="{view>Zwnam}"/>	<!-- key="{view>Zwfac}" -->		
										</Select>
									</fb:control>				
								</fb:FilterItem>				
								<fb:FilterItem name="C" label="발주일자">
									<fb:control>
										<Select
											id="slSupplierName"
											change="onSelectChange"
											forceSelection="true"
											items="{view>/data}">
										<core:Item text="{view>/Zfalo}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>
							</fb:filterItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>

			<!-- DynamicPage Content -->
			<f:content>
				<Table  id="idProductsTable"
						inset="false"
						items="{view>/data}"
						>
					<columns>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="제품명"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="공급업체"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="발주수량"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="입고수량"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="가용수량"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="입고상태"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true"
								hAlign="Center">
							<Text text="상세정보"/>
						</Column>
					</columns>

					<items >
						<ColumnListItem 
								type="Active"
								vAlign="Middle"
								press=".onPress" 
								id="idColumnListItem" >
							<cells>
								<ObjectIdentifier
										title="{view>Mandt}"
										text="{view>Zwnam}"/>
								<Text text="{view>Zwfac}"/>
								<Text text="{view>Zsect}"/>
								<Text text="{view>Zsect}"/>
								<Text text="{view>Zsect}"/>
								<Text text="{view>Zfalo1}"/>
								<Button icon="sap-icon://action" press="onApproveDialog" ariaLabelledBy="actionButtonLabel"/>

							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>

		</f:DynamicPage>
	</App>
</mvc:View>