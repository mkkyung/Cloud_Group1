	<App id="apps">
		<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
<!-- 			DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="false">
					<f:content>
						<fb:FilterBar search="onSearch" useToolbar="false" showGoOnFB="false">
							<fb:filterItems>
								<fb:FilterItem name="A" label="공급업체명">
									<fb:control>
										<Select
											id="vName"
											forceSelection="true"
											change="onSelectChange"
											items="{Ven>/data}">
										<core:Item  text="{Ven>VName}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>								
								<fb:FilterItem name="B" label="제품명">
									<fb:control>
										<Select
											id="pName"
											change="onSelectChange"
											forceSelection="true"
											items="{Pro>/data}">
										<core:Item  text="{Pro>Cat3Name}"/>		
										</Select>
									</fb:control>				
								</fb:FilterItem>				
								<fb:FilterItem name="C" label="발주일자">
									<fb:control>
										<Select
											id="poDate"
											change="onSelectChange"
											forceSelection="true"
											items="{Po>/data}">
										<core:Item text="{Po>/Podate}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>
							</fb:filterItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>

      
      
      
<!-- 			DynamicPage Content -->
			<f:content>
				<Table  id="idProductsTable"
						inset="false"
						items="{Po>/data}"
						>
					<columns>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="제품명"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="공급업체"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="발주수량"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="입고수량"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="가용수량"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="발주/입고 일자"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="입고상태"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true"
								hAlign="Center">
							<Text text="입고등록"/>
						</Column>
					</columns>

					<items >
						<ColumnListItem 
								type="Active"
								vAlign="End"
								press=".onTablePress" 
								id="idColumnListItem" >
							<cells>
								<ObjectIdentifier
										title="{Po>PoPname}"
										text="{Po>PoCat3}"/>
								<Text text="{Po>PoVname}"/>
								<Text text="{Po>PoTotal}"/>
								<Text text="{Po>InAmt}"/><!-- 입고수량 -->
								<Text text="{Po>Inavail}" /><!-- 가용수량 -->
								<ObjectIdentifier
										title="{Po>PoPodate}"
										text="{Po>PoEdate}"/>
<!-- 								<Text text="{view>Zsect}"/> -->
								<Text text="{Po>InIcon}"/><!-- 입고상태 -->
								<Button icon="sap-icon://action" press="onApproveDialog" ariaLabelledBy="actionButtonLabel"/>

							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>

		</f:DynamicPage>
	</App>
</mvc:View>