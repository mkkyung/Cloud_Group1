<!-- 											items="{Po>/data}"> -->
<!-- 										<core:Item text="{Po>/Podate}"/> -->
<!-- 										</Select> -->
<!-- 									</fb:control>				 -->
<!-- 								</fb:FilterItem> -->
							</fb:filterItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>

      
      
      
<!-- 			DynamicPage Content -->
			<f:content>
				<Table  id="idProductsTable"
						inset="false"
						items="{Po>/data}"
						>
					<columns>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true"
								mergeDuplicates="true">
							<header>
								<Text text="제품명"/>
							</header>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true"
								mergeDuplicates="true">
							<header>
								<Text text="제품코드"/>
							</header>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="공급업체"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="발주수량  "/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="입고수량"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="가용수량"/>
						</Column>

						<Column
								minScreenWidth="Tablet"
								demandPopin="true">
							<Text text="발주상태"/>
						</Column>
						<Column
								minScreenWidth="Tablet"
								demandPopin="true"
								hAlign="Center">
							<Text text="입고등록"/>
						</Column>
					</columns>

					<items >
						<ColumnListItem 
								type="Active"
								vAlign="End"
								press=".onTablePress" 
								id="idColumnListItem" >
							<cells>
<!-- 								<ObjectIdentifier -->
<!-- 										text="{Po>PoPname}" -->
<!-- 										/> -->
								<Text text="{Po>PoPname}"/><!-- 제품명 -->
								<Text text="{Po>PoCat3No}"/><!-- 제품코드 -->
								<Text text="{Po>PoVname}"/>
								<Text text="{Po>PoTotal}"/><!-- 발주수량 -->
								<Text text="{Po>InAmt}"/><!-- 입고수량 -->
								<Text text="{Po>Inavail}" /><!-- 가용수량 -->
<!-- 								<ObjectIdentifier -->
<!-- 										title="{Po>PoPodate}" -->
<!-- 										text="{Po>PoEdate}"/> -->
<!-- 								<Text text="{view>Zsect}"/> -->
								<Text text="{Po>PoLight}"/><!--입고상태  -->
								<Button icon="sap-icon://action" press="onApproveDialog" ariaLabelledBy="actionButtonLabel"/>

							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>

		</f:DynamicPage>
	</App>
</mvc:View>